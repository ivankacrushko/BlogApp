@model IEnumerable<BlogApp.Models.Post>
<h1>Posts</h1>

@if (User.Identity.IsAuthenticated)
{
    <a asp-controller="Posts" asp-action="Create" class="btn btn-primary">Add Post</a>
}

@foreach (var post in Model)
{
    <div>
        <h2>@post.Title</h2>
        <p>@post.Content</p>
        <p><i>By: @post.User.FullName on @post.CreatedAt</i></p>
        <a href="@Url.Action("Details", new { id = post.Id })">Read more</a>
    </div>
}
